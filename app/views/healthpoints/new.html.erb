<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="well">
      <%= form_for @healthpoint do |f| %>
        <div class="form-group">
          <%= f.label :period %>
          <%= f.check_box : healthpoint1, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :itchiness %>
          <%= f.check_box : healthpoint2, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :tenderness %>
          <%= f.range_field : healthpoint3, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :swelling %>
          <%= f.check_box : healthpoint4, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :dryness %>
          <%= f.range_field : healthpoint5, class: 'form-control' %>
        </div>
        
        <div class="form-group">
          <%= f.label :diary_entry %>
          <%= f.text_area :diary_entry, class: 'form-control' %>
        </div>
        <%= f.submit 'Submit', class: 'btn btn-default' %>
      <% end %>
    </div>
  </div>
</div>